@{
    ViewBag.Title = "Home";
}

<style>
    /* Loader */

    div.modal-bg {
        background: rgba(96,125,139,0.4);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        display: none;
    }

    div.loader {
        position: fixed;
        top: 50%;
        left: 48%;
        display: none;
    }



    /* Main */

    .parallax-container .parallax img {
        display: initial;
    }


    body {
        /*min-height: 300vh;*/
        background-image: url('../../Images/Office.jpeg');
        min-height: 100%;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        background-size: cover;
        color: whitesmoke;
    }

    .parallax-container {
        height: 800px;
    }



    .placard_text {
        font-weight: 300;
        padding: 15px;
        margin-bottom: 30px;
        background: rgba(96,125,139,0.4);
        border-radius: 10px;
        font-size: 15px;
        text-align: justify;
        color: whitesmoke;
        text-shadow: -5px 9px 8px rgba(147, 152, 163, 0.67);
    }

    .container {
        max-width: 700px;
        margin-left: 200px;
        box-shadow: rgba(96,125,139,0.4);
    }

    .mycontainer {
        margin: 10px auto 70px;
        max-width: 1280px;
        width: 50%;
    }

    /*style="max-width:1000px;margin-left:auto;margin-right:auto"*/


    .myimage img {
        background-attachment: fixed;
        position: absolute;
        left: 50%;
        min-width: 100%;
        min-height: 100%;
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);
        -webkit-transform: translateX(-50%);
        transform: translateX(-50%);
    }

    .cardleft {
        background-color: #546e7a;
    }

        .cardleft:hover {
         background-color: #5c7b8a;
         cursor: pointer;
        }

    .cardright {
         background-color: #546e7a;
    }

        .cardright:hover {
          background-color: #5c7b8a;
          cursor: pointer;
        }

    .logolower {
        padding-left: 40px;
        padding-top: 10px;
        font-size: 20px;
        font-weight: 300;
    }
</style>




