
<!DOCTYPE html>  @*Specifies HTML5*@
<html lang="en">
    <head>
        <meta charset="utf-8" />
        @*<meta http-equiv="X-UA-Compatible" content="IE=edge">*@
        <title>@ViewBag.Title - Plumm Studios Ltd IT Assets Database</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                              
                <div class="float-left">                                      
               <div class="logo" style="color:#6c254a;font-size:36px;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">PLUMM STUDIOS Ltd</div>
               <div><img src="~/Images/Plumm Studios Title Bar.png" style="width:350px" /></div>
               <p class="site-title">IT SUPPORT SOLUTIONS</p>
                    
                 <p></p>

                </div> 
                <div class="float-right">
                    <section id="login">                       
                        <span class="username"> @{Html.RenderAction("LoggedIn","LoggedIn");}</span>
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Assets", "Index", "Assets")</li>                            
                            <li>@Html.ActionLink("Knowledge", "Index", "KnowledgeBase")</li>
                            <li>@Html.ActionLink("READ FIRST", "ReadMe", "KnowledgeBase")</li>
                        </ul>
                    </nav>
                </div>
             </div>
            
            
          </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - IT Support Solutions</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
